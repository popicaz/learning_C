#include <stdio.h>

int main() {
    int h, i, j, k, l;

    printf("Piramit yüksekliğini girin: ");
    scanf("%d", &h);

    for (i = 1; i <= h; i++) {
       
        for (j = 1; j <= h - i; j++) {
            printf(" ");
        }
   
     
        for (j = 1; j <= i; j++) {
            printf("%d", j);
        }
       
        for (j = i - 1; j >= 1; j--) {
            printf("%d", j);
        }
        printf("\n");
    
}
    return 0;
}
